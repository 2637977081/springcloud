package com.cc.yonyou.rndealer.service.server;

import org.springframework.cloud.netflix.feign.FeignClient;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;

import com.cc.yonyou.rndealer.domain.json.BaseJSON;
import com.cc.yonyou.rndealer.service.fallback.LogServerFallback;

@FeignClient(value="rndealer-microservice-log",fallback=LogServerFallback.class)
public interface LogServer {
	
	@RequestMapping(value = "/log/addLog", method = RequestMethod.GET)
	public BaseJSON addSystemLog(@RequestParam(value = "serviceName")String serviceName,@RequestParam(value = "fromIp")String fromIp,
					@RequestParam(value = "text")String text,
					@RequestParam(value = "createId")int createId,
					@RequestParam(value = "json")String json,
					@RequestParam(value = "logLevel")int logLevel);
}
