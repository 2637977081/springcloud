package com.cc.yonyou.rndealer.api;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.cc.yonyou.rndealer.domain.json.BaseJSON;
import com.cc.yonyou.rndealer.service.UserService;

import io.swagger.annotations.Api;
import io.swagger.annotations.ApiImplicitParam;
import io.swagger.annotations.ApiImplicitParams;
import io.swagger.annotations.ApiOperation;

@RestController
@RequestMapping("/user")
@Api("用户相关接口")
public class UserController {
	@Autowired
	UserService userService;
	
	
	@ApiOperation("登陆")
	@ApiImplicitParams({
		@ApiImplicitParam(paramType = "query", name = "phone", dataType = "String", required = true, value = "用户手机号", defaultValue = "15044075770"),
		@ApiImplicitParam(paramType = "query", name = "password", dataType = "String", required = true, value = "用户密码", defaultValue = "123456"),

	})
	@RequestMapping(value = "/login", method = RequestMethod.GET)
	public BaseJSON login(String phone , String password,HttpServletRequest request){
		BaseJSON baseJSON = new BaseJSON();
		baseJSON = this.userService.login(phone, password,request);
		return baseJSON;
	}
	
}
